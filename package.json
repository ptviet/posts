{
  "name": "posts-be",
  "version": "1.0.0",
  "description": "posts-be",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "server:dev": "nodemon",
    "server": "NODE_ENV=production PORT=40001 node dist/server.js",
    "client:dev": "cd client && npm run dev",
    "client": "cd client && npm start",
    "dev": "concurrently --names \"server:dev,client:dev\" \"npm run server:dev --silent\" \"npm run client:dev --silent\"",
    "start": "concurrently --names \"server,client\" \"npm run server --silent\" \"npm run client --silent\"",
    "heroku-postbuild": "npm install && npm run build && cd client && npm install && npm run build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.0.5",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/md5": "^2.1.33",
    "@types/mongoose": "^5.3.8",
    "@types/node": "^10.12.18",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "cookie-parser": "^1.4.3",
    "dotenv": "^6.2.0",
    "graphql": "^14.1.1",
    "graphql-yoga": "^1.17.0",
    "jsonwebtoken": "^8.4.0",
    "md5": "^2.2.1",
    "mongoose": "^5.4.5",
    "nodemon": "^1.18.9",
    "ts-log-debug": "^4.0.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.4"
  },
  "devDependencies": {
    "eslint": "^5.12.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1"
  },
  "engines": {
    "node": "11.6.0",
    "npm": "6.5.0"
  }
}
